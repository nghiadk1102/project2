<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= t ".change_your_password" %></h2>

    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
      <%= render "shared/error_message", object: resource %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.label t(".password"), t(".new_password") %>
      <% if @minimum_password_length %>
        <em>
          (<%= @minimum_password_length %><%= t ".characters_minimum" %>)
        </em><br/>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off",
        class: "form-control" %><br/>

      <%= f.label t(".password_confirmation"), t(".confirm new password") %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control" %>

      <%= f.submit t(".change_my_password"), class: "btn btn-primary btn-block" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
