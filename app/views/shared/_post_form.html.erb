<%= form_for Post.new do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <div class="field">
    <% t.label t(".title") %>
    <%= f.text_field :title, placeholder: t(".write_title"), class: "title" %>
  </div>
  <div class="field">
    <% t.label t(".content") %>
    <%= f.text_area :content, placeholder: t(".compose_new_post") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>
